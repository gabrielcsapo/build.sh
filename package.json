{
  "name": "build.sh",
  "version": "1.2.0",
  "description": "ðŸ”¨ run and visualize the build process",
  "repository": {
    "type": "https",
    "url": "https://github.com/gabrielcsapo/build.sh.git"
  },
  "bugs": {
    "url": "https://github.com/gabrielcsapo/build.sh/issues"
  },
  "homepage": "https://www.gabrielcsapo.com/build.sh",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "tape test/**.js",
    "coverage": "tap test --coverage --coverage-report=lcov --no-browser",
    "generate-docs": "tryitout && jsdoc -c jsdoc.json",
    "pack": "pkg bin/build.js -c package.json -o packed/build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./docs/storybook"
  },
  "bin": {
    "build": "./bin/build.js"
  },
  "author": "Gabriel J. Csapo <gabecsapo@gmail.com>",
  "license": "Apache-2.0",
  "standard": {
    "envs": [
      "browser",
      "node"
    ],
    "parser": "babel-eslint",
    "ignore": [
      "docs/**",
      "dist/**"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "ascii-pipeline": "^0.2.0",
    "async": "^2.6.2",
    "babel-loader": "^8.0.5",
    "commander": "^2.20.0",
    "css-loader": "^2.1.1",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "js-yaml": "^3.13.1",
    "log-update": "^3.2.0",
    "opn": "^6.0.0",
    "prop-types": "^15.7.2",
    "psychic.css": "0.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "style-loader": "^0.23.1",
    "webpack": "^4.30.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.0.10",
    "@storybook/react": "^5.0.10",
    "babel-eslint": "^10.0.1",
    "docdash": "^1.1.0",
    "jsdoc": "^3.5.5",
    "pkg": "^4.3.7",
    "standard": "^12.0.1",
    "tap": "^13.0.3",
    "tape": "^4.10.1",
    "tryitout": "^2.0.6"
  },
  "pkg": {
    "scripts": [
      "bin/*",
      "util/**/*"
    ],
    "assets": [
      "src/**/*",
      "node_modules/psychic.css/dist/psychic.min.css"
    ],
    "targets": [
      "node8-macos-x64",
      "node8-alpine-x64",
      "node8-linux-x64",
      "node8-win-x64"
    ]
  }
}
